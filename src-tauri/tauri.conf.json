{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "narratrix",
  "version": "0.1.0",
  "identifier": "com.narratrix.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build --ignore-warnings",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Narratrix",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:narratrix_main.db"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/favicon-96x96", "icons/Square192x192Logo.png", "icons/Square512x512Logo.png", "icons/favicon.svg", "icons/icon.ico"],
    "resources": ["resources/**/*"]
  }
}
